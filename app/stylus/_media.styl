/* Small Devices, Tablets */
@media only screen and (max-width : 768px)
  .header__logo
    width 180px

  .header__timephone__text
    font-size 13px
    margin-bottom: 0
  .header__timephone__phone
    font-size 21px
  .slider-main__content__h2
    font-size 50px
  .slider-main__content__p
    font-size 0.9em
  .slider-main__content__link
    font-size 13px
  .content__flex-center
    margin inherit
    margin-top auto
    margin-bottom auto
    padding-left 66px
  .feature
    padding 0
    top 0
  .feature__block
    max-width none
    &:hover
     box-shadow none
  .feature__block__h3
    font-size 12px
    line-height 17px
  .feature__block__icon
    width 40px
  .feature__block__link
    font-size: 12px

/* Extra Small Devices, Phones */
@media only screen and (max-width : 480px)
  .header__timephone__phone
    font-size 15px
  .header__timephone__text
    font-size 10px
    margin-bottom 0
  .header__timephone__icon
    font-size: 10px
  .owl-prev, .owl-next
    top inherit
    bottom 40px
    font-size 29px
  .content__flex-center
    padding 0
/* Custom, iPhone Retina */
@media only screen and (max-width : 320px)
  .header__logo
    width 150px
  .header__timephone__text
    font-size 10px
